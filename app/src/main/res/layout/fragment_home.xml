<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/search_view"
            app:queryHint="What are you looking for" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/search_view"
            android:layout_marginBottom="20dp"
            app:auto_cycle="true"
            app:corner_radius="20"
            app:delay="0"
            app:period="1000" />

        <TextView
            android:id="@+id/collections_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_slider"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="Collections"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gridCollections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collections_text"
            android:columnCount="2"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/top_collection_card"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/top_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        tools:src="@drawable/top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Tops"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bottom_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        tools:src="@drawable/top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Bottoms"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="fill"
                android:layout_margin="5dp"

                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/outerwear_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        tools:src="@drawable/top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Outerwears"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/accesorie_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        tools:src="@drawable/top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Accessories"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </RelativeLayout>
</ScrollView>